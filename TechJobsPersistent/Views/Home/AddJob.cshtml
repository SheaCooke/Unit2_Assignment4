@using TechJobsPersistent.ViewModels 
@model AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="AddJob" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Name</label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span asp-validation-for="EmployerId"></span>

        <a asp-controller="Employer" asp-action="Add">Add Employer</a>

    </div>

    <div class="form-group">
        @foreach(var i in Model.Skills)
            {
                <label>@i.Name</label>
                <input type="checkbox" name="selectedSkill" value="@i.Id" />
            }
        <a asp-controller="Skill" asp-action="Add">Add Skill</a>
    </div>

    <input type="submit" value="Add Job" />
</form>

